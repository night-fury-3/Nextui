{
  "name": "@nextui/react",
  "version": "0.1.2",
  "license": "MIT",
  "description": "ðŸš€ Beautiful and modern React UI library.",
  "homepage": "https://nextui.org",
  "bugs": {
    "url": "https://github.com/jrgarciadev/next-ui/issues/new/choose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jrgarciadev/next-ui"
  },
  "keywords": [
    "next",
    "next ui",
    "components",
    "modern components",
    "react components",
    "react ui"
  ],
  "main": "./dist/index.js",
  "exports": "./dist/index.modern.js",
  "module": "./dist/index.module.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/index.umd.js",
  "source": "./src/index.ts",
  "sideEffects": false,
  "scripts": {
    "clear": "rm -rf ./dist ./esm",
    "build:prod": "yarn clear && microbundle build --jsx React.createElement --jsxFragment React.Fragment --tsconfig tsconfig.build.json --compress --strict --format modern,cjs",
    "build:watch": "yarn clear && microbundle watch --jsx React.createElement --jsxFragment React.Fragment --no-compress --format modern,cjs",
    "build": "yarn build:prod",
    "watch": "yarn build:watch",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "start-storybook": "yarn build-storybook && http-server ./storybook-static",
    "test": "jest --config jest.config.js --no-cache",
    "test-update": "jest --config jest.config.js --no-cache --update-snapshot",
    "coverage": "yarn test --coverage",
    "coverage-update": "yarn test-update --coverage",
    "coverage:codecov": "yarn test --coverage && codecov"
  },
  "files": [
    "/dist",
    "/esm"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "styled-jsx": "^3.4.4"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@storybook/addon-a11y": "^6.2.8",
    "@storybook/addon-actions": "^6.2.8",
    "@storybook/addon-docs": "^6.2.8",
    "@storybook/addon-essentials": "^6.2.8",
    "@storybook/addon-links": "^6.2.8",
    "@storybook/addon-storysource": "^6.2.8",
    "@storybook/react": "^6.2.8",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.22",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.1",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.1.0",
    "enzyme": "^3.11.0",
    "jest": "^26.6.3",
    "microbundle": "^0.13.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  }
}
